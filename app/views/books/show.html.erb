
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@bookfind.user) do %>
						<%= attachment_image_tag(@bookfind.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @bookfind.user.name %>
						<% end %>
					</td>
					<td><%= link_to @bookfind.title, @bookfind %></td>
					<td><%= @bookfind.body %></td>

					<td>
						<% if current_user.already_favorited?(@bookfind) %>
						  <%= link_to book_favorites_path(@bookfind),method: :delete do %>
						    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
						  <% end %>
						<% else %>
						  いいね！
						  <%= link_to book_favorites_path(@bookfind),method: :post do %>
						    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						  <% end %>
						<% end %>
						<%= @bookfind.favorites.count %>
					</td>

					<td>
						コメント数:<%= @comments.count%>
					</td>
					<td>
						<% if @bookfind.user == current_user %>
						  <%= link_to "Edit",edit_book_path(@bookfind), class: "btn-sm btn-success edit_book_#{@bookfind.id}" %>
						<% else %>
						<% end %>
						</td>
					<td>
						<% if @bookfind.user == current_user %>
						  <%= link_to "Destroy",@bookfind, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@bookfind.id}" %>
						<% else %>
						<% end %>
						</td>
				</tr>
			</table>

			<%= form_for [@bookfind, @comment] do |f| %>
				<%= f.text_area :content %>
				<%= f.submit "コメントする" %>
			<% end %>

			<h2>コメント一覧</h2>
			<% @comments.each do |c| %>
				<table class="table .table">
				  <tr>
				  	<td>
						<a href="/users/<%= @bookfind.user.id %>"><%= c.user.name %></a>
						</td>
						<td><%= c.content %></td>
						<td>
						<% if c.user == current_user %>
							<%= link_to '削除',book_book_comment_path(@bookfind),method: :delete,"data-confirm" => "本当に削除しますか？" %>
						<% else %>
						<% end %>
						</td>
			  	</tr>
				</table>
      <% end %>

	</div>
</div>

