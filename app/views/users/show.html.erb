<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile' %>
<!--同コントローラーのviewで表示ならusersは省略可 -->
<h2>New book</h2>

<%= render 'books/newform' %>
</div>

<div class="col-xs-9">
<h2>Books</h2>
<!--books一覧 -->
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to (book.user) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
        <% end %>
      </td>
      <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<!--books一覧 -->
</div>

<% if @user.id == current_user.id %>
<div class="col-xs-12">
<h2>Your Map</h2>

<div id='map'></div>

<style>
#map {
  height: 600px;
  width: 100%;
}
</style>

<script>
let map



function initMap(){
  geocoder = new google.maps.Geocoder();


  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: <%= Geocoder.search(current_user.address).first.coordinates.first %>,
            lng: <%= Geocoder.search(current_user.address).first.coordinates.last %>},
    zoom: 12,
  });

  marker = new google.maps.Marker({
    position:  {lat: <%= Geocoder.search(current_user.address).first.coordinates.first %>,
                lng: <%= Geocoder.search(current_user.address).first.coordinates.last %>},
    map: map
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['SECRET_KEY']%>&callback=initMap" async defer></script>
</div>
<% else %>
<% end %>
</div>


